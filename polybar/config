[colors]
#nord colorpallete + recommended uses
#used for backgrounds
background = #2e3440
#used for UI elements like status bars
background-light = #3b4252
#used for line highlighting and selection highlighting
background-lighter = #434c5e
#used for comments, invisibles, etc.
background-lightest = #4c566a

#used for text, variables, constants, and attributes
text = #d8dee9
#used as a lighter background for some UI elements like status bars
text-light = #e5e9f0
#used for punctuations, carets, and structuring characters like brackets{}
text-lighter = #eceff4

#used for classes types and documentation tags
blue = #8fbcbb
#main accent of color pallette used for primary UI elements and methods/functions
blue2 = #88c0d0
#used for langauge specific syntax/reserved keywords
blue3 = #81a1c1
#used for markup doctypes, import/include/require/pre-processor statements
blue4 = #5e81ac

#used for errors, git/diff deletion and linter marking
red = #bf616a
#used for annotations
orange = #d09770
#used for escape characters, regular expressions and warnings
yellow = #ebcb8b
#main color for strings and attribute values
green = #a3be9c
#used for numbers
pinkish = #b48ead



[settings]
throttle-ms = 50
throttle-limit = 5

##########################
##  Bar
##########################

[bar/nord]
monitor = HDMI-1
width = 100%
height = 28
offset-y = 5

background = ${colors.background}
foreground = ${colors.text}

overline-size = 2
overline-color = ${colors.red}
underline-size = 2
underline-color = ${colors.red}

spacing = 1
# padding-right = 1
module-margin-left = 0
module-margin-right = 1

# font-0 = RobotoMono Nerd Font:size=10;2
# font-1 = RobotoMono Nerd Font:size=10;2
# font-2 = RobotoMono Nerd Font:size=10:weight=bold;2
# font-5 = RobotoMono Nerd Font:size=12:weight=bold;2

font-0 = UbuntuMono Nerd Font:size=11;2
font-1 = UbuntuMono Nerd Font:size=10;2
font-2 = UbuntuMono Nerd Font:size=10:weight=bold;2
font-3 = Termsynu:size=8;1
font-4 = Unifont:size=6;5
font-5 = UbuntuMono Nerd Font:size=12:weight=bold;2

modules-left = i3 spotifytitle
modules-center = xwindow
modules-right = audio audio2 cpu memory date time wired-network wireless-network powermenu

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

tray-position = right
tray-detached = false
tray-maxsize = 16
tray-offset-y = -5

##########################
##  i3
##########################

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-default = 

label-mode-padding = 1
label-mode-foreground = ${colors.red}
label-mode-background = ${colors.background}

label-focused = %icon%
label-focused-background = ${colors.background-light}
label-focused-foreground = ${colors.text}
label-focused-underline = ${colors.blue2}
label-focused-padding = 2
label-focused-font = 6

label-unfocused = %icon%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.text}
label-unfocused-font = 6

label-visible = %icon%
label-visible-padding = 2
label-visible-font = 6

label-urgent = %icon%
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.text}
label-urgent-padding = 2
label-urgent-font = 6

##########################
##  spotifytitle
##########################

[module/spotifytitle]
type                        = custom/script
exec                        = $HOME/.config/polybar/spotify.sh
exec-if                     = pgrep -x spotify
label                       = %output%
label-foreground            = ${colors.blue2}
tail                        = true
interval = 5

##########################
##  wired-network
##########################

[module/wired-network]
type                        = internal/network
interface                   = enp9s0
interval                    = 3
unknown-as-up               = false
format-connected            = <label-connected>
label-connected             = "  "

##########################
##  wireless-netowork
##########################

[module/wireless-network]
type                        = internal/network
interface                   = wlp8s0:
interval                    = 3
ping-interval               = 3
unknown-as-up               = false
format-connected            = <label-connected>
label-connected = "  "


##########################
##  xwindow
##########################

[module/xwindow]
type = internal/xwindow
