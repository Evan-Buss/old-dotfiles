##########################
##  cpu
##########################

[module/cpu]
type = internal/cpu
interval = 2
# format-prefix = " "
format-prefix = "CPU "
format-prefix-foreground = ${colors.red}
format-underline = ${colors.blue2}
label = %percentage%%

##########################
##  memory
##########################

[module/memory]
type = internal/memory
interval = 2
# format-prefix = " "
format-prefix = "RAM "
format-prefix-foreground = ${colors.red}
format-underline = ${colors.blue2}
label = %mb_used%

##########################
##  audio
##########################

[module/audio]
type = internal/pulseaudio
sink = alsa_output.usb-Kingston_HyperX_7.1_Audio_00000000-00.analog-stereo

format-volume-prefix =  "   "
format-volume-prefix-foreground = ${colors.red}
format-volume = <label-volume>
format-muted = <label-muted>
label-muted = muted
label-muted-padding = 2
label-volume = %percentage%

format-volume-underline = ${colors.blue2}
format-muted-background = ${colors.background-lightest}
format-muted-foreground = ${colors.blue4}

##########################
##  audio2
##########################

[module/audio2]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo

format-volume = <label-volume>
label-volume = %percentage%

format-muted = <label-muted>
label-muted = muted
format-muted-background = ${colors.background-lightest}
format-muted-foreground = ${colors.blue4}

format-volume-padding = 2
format-muted-padding = 2
format-volume-underline = ${colors.blue2}

##########################
##  date
##########################

[module/date]
type = internal/date
interval = 1
date =" %m-%d-%Y"
date-alt = %A, %d %B %Y

format-prefix ="  " 
format-prefix-foreground = ${colors.red}
format-underline = ${colors.blue2}

##########################
##  time
##########################

[module/time]
type = internal/date
